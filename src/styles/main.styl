//Import custom definitions
@import "_custom"

// Import the theme
@import "vendor/white"

//Colors
main = primary

.primary
  color primary !important
.secondary
  color secondary !important
.white
  color white !important

.reveal

  img,video
    max-width 100%

  pre
    width 100%
    line-height 1.5em
    margin-top 50px
    font-size 0.5em

  .block
    display: table
    background: main
    padding 5px 15px
    color white

  .left
    text-align left
  .right
    text-align right
  .center
    text-align: center
    margin auto

  .top
    top 0 !important
  .bottom
    margin-top: 500px
  .middle
    margin-top: 100px

  .sec-slide
    h1,h2,h3,h4,.text
      color main
    hr
      border-color main

  .center
    text-align center
    display block
    margin auto

  .text
    font-size 1.1em
    line-height 1.5em

  ul
    margin-top 30px
    li
      font-size .9em
      line-height 2em

  .col-3
    display: inline-block
    width 22%
    text-align center
    margin 90px 40px

.bigger
  font-size 4em

.rounded
  border-radius 50%

.bold
  font-weight 800 !important

.upper
  text-transform uppercase

.shadow
  text-shadow 0 1px 0 #ccc
              ,0 2px 0 #c9c9c9
              ,0 3px 0 #bbb
              ,0 4px 0 #b9b9b9
              ,0 5px 0 #aaa
              ,0 6px 1px rgba(0,0,0,.1)
              ,0 0 5px rgba(0,0,0,.1)
              ,0 1px 3px rgba(0,0,0,.3)
              ,0 3px 5px rgba(0,0,0,.2)
              ,0 5px 10px rgba(0,0,0,.25)
              ,0 10px 10px rgba(0,0,0,.2)
              ,0 20px 20px rgba(0,0,0,.15)
